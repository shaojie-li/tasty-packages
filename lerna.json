{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "npmClient": "pnpm",
  "npmClientArgs": ["--production", "--no-optional"],
  "skipNxCache": true,
  "version": "independent",
  "useNx": true,
  "command": {
    "version": {
      "allowBranch": ["main"],
      "conventionalCommits": true
    },
    "publish": {
      "registry": "https://registry.npmjs.org/"
    }
  },
  "message": "chore(release): %s",
  "ignoreChanges": [
    "**/.babelrc", 
    "**/tsconfig.json", 
    "**/*.config.js", 
    "**/*.lock", 
    "**/*.log", 
    "**/*.md"
  ]
}
